# Production Environment Configuration
# Copy this file to .env.production and fill in your actual values

# Database Configuration
DATABASE_URL="postgresql://username:password@host:port/database?sslmode=require"

# JWT Security (CRITICAL: Generate strong secrets for production)
NEXTAUTH_SECRET="your-super-secure-jwt-secret-at-least-32-characters-long"
JWT_REFRESH_SECRET="your-super-secure-refresh-secret-different-from-above"

# NextAuth Configuration
NEXTAUTH_URL="https://your-production-domain.com"

# CORS Configuration
NEXT_PUBLIC_FRONTEND_URL="https://your-production-domain.com"
ALLOWED_ORIGINS="https://your-production-domain.com,https://www.your-production-domain.com"

# App Configuration
NODE_ENV="production"
NEXT_PUBLIC_APP_NAME="Habit Tracker"
NEXT_PUBLIC_APP_VERSION="1.0.0"

# Security Headers
SECURITY_HEADERS_ENABLED="true"
RATE_LIMITING_ENABLED="true"

# Monitoring & Logging
LOG_LEVEL="error"
ENABLE_ANALYTICS="true"

# Email Configuration (if needed)
SMTP_HOST="your-smtp-host"
SMTP_PORT="587"
SMTP_USER="your-smtp-username"
SMTP_PASS="your-smtp-password"
FROM_EMAIL="noreply@your-domain.com"

# File Upload (if needed)
MAX_FILE_SIZE="5242880" # 5MB in bytes
ALLOWED_FILE_TYPES="image/jpeg,image/png,image/gif"

# API Rate Limiting
RATE_LIMIT_WINDOW="900000" # 15 minutes in milliseconds
RATE_LIMIT_MAX_REQUESTS="100"

# Session Configuration
SESSION_TIMEOUT="86400" # 24 hours in seconds
REFRESH_TOKEN_EXPIRY="604800" # 7 days in seconds

# Feature Flags
ENABLE_REGISTRATION="true"
ENABLE_PASSWORD_RESET="true"
ENABLE_EMAIL_VERIFICATION="false"

# Third-party Services (if used)
SENTRY_DSN="your-sentry-dsn-for-error-tracking"
ANALYTICS_ID="your-analytics-tracking-id"

# Backup Configuration
BACKUP_ENABLED="true"
BACKUP_FREQUENCY="daily"
BACKUP_RETENTION_DAYS="30" 