# Production Environment Configuration
# Copy this file to .env.production and fill in your actual values

# Appwrite Configuration
NEXT_PUBLIC_APPWRITE_ENDPOINT="https://cloud.appwrite.io/v1"
NEXT_PUBLIC_APPWRITE_PROJECT_ID="your-appwrite-project-id"
NEXT_PUBLIC_APPWRITE_DATABASE_ID="your-appwrite-database-id"
APPWRITE_API_KEY="your-appwrite-api-key"

# Appwrite Collection IDs
NEXT_PUBLIC_APPWRITE_USERS_COLLECTION_ID="your-users-collection-id"
NEXT_PUBLIC_APPWRITE_HABITS_COLLECTION_ID="your-habits-collection-id"
NEXT_PUBLIC_APPWRITE_HABIT_COMPLETIONS_COLLECTION_ID="your-completions-collection-id"

# App Configuration
NODE_ENV="production"
NEXT_PUBLIC_APP_NAME="Habit Tracker"
NEXT_PUBLIC_APP_VERSION="1.0.0"
NEXT_PUBLIC_APP_URL="https://your-production-domain.com"

# CORS Configuration
ALLOWED_ORIGINS="https://your-production-domain.com,https://www.your-production-domain.com"

# Security Headers
SECURITY_HEADERS_ENABLED="true"
RATE_LIMITING_ENABLED="true"

# Monitoring & Logging
LOG_LEVEL="error"
ENABLE_ANALYTICS="true"

# API Rate Limiting
RATE_LIMIT_WINDOW="900000" # 15 minutes in milliseconds
RATE_LIMIT_MAX_REQUESTS="100"

# Feature Flags
ENABLE_REGISTRATION="true"
ENABLE_PASSWORD_RESET="true"
ENABLE_EMAIL_VERIFICATION="false"

# Third-party Services (if used)
SENTRY_DSN="your-sentry-dsn-for-error-tracking"
ANALYTICS_ID="your-analytics-tracking-id"

# Backup Configuration (handled by Appwrite)
BACKUP_ENABLED="true"
BACKUP_FREQUENCY="daily"
BACKUP_RETENTION_DAYS="30" 